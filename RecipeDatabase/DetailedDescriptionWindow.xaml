<Window x:Class="RecipeDatabase.DetailedDescriptionWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:RecipeDatabase"
		mc:Ignorable="d"
		MinHeight="350" MinWidth="800"
		Title="Title" Height="550" Width="800" Icon="/Icon.png">
	<Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="138.814" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FF1061E4" Offset="0"/>
                <GradientStop Color="#FF00FFB9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        
        <Grid.RowDefinitions>
			<RowDefinition Height="7*"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="10*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Text="Название"
            Name="RecipeName"
            TextWrapping="Wrap"
            FontSize="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" FontFamily="Segoe Script"
        >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="214.16" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFF0909"/>
                    <GradientStop Color="#FF261FEF" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBox
            x:Name="Ingredients"
            Grid.Row="1"
            Margin="10"
            IsReadOnly="True"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            xml:space="preserve"
            >Пример
рецепта</TextBox>
        <TextBox
            x:Name="Actions"
            Grid.Row="2"
            Margin="10"
            IsReadOnly="True"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            xml:space="preserve"
            >Пример
рецепта</TextBox>











    </Grid>
</Window>
