<Window x:Class="RecipeDatabase.RecipeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeDatabase"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        Title="RecipeEditWindow" Height="450" Width="800" Icon="/Icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <TextBlock Text="Название:"/>
        <TextBox x:Name="NameTextBox" IsReadOnly="True" Grid.Column="1" Grid.Row="0" Margin="5"/>

        <TextBlock Text="Ингредиенты:" Grid.Row="1"/>
        <TextBox x:Name="IngredientsTextBox" Grid.Column="1" Grid.Row="1" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>

        <TextBlock Text="Приготовление:" Grid.Row="2"/>
        <TextBox x:Name="ActionsTextBox" Grid.Column="1" Grid.Row="2" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>

        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <Button
			    Content="Сохранить"
			    Click="EditButton_Click"
			    Margin="5"
            />
            <Button
                Grid.Column="1"
			    Content="Отмена"
			    Click="CancelButton_Click"
			    Margin="5"
            />
            
        </Grid>
    </Grid>
</Window>
