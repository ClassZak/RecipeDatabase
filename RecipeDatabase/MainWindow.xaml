<Window x:Class="RecipeDatabase.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:RecipeDatabase"
		mc:Ignorable="d"
		Closing="Window_Closing"
		Initialized="Window_Initialized"
		Title="Книга рецептов"
        
        Height="450" Width="800"
        MinHeight="350" MinWidth="700" Icon="/Icon.png">
    <Window.Resources>
        <Style x:Key="ListViewFocusVisualStyle1"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Программа">
                <MenuItem Header="Выход" Click="CloseMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Обновить данные"/>
            </MenuItem>
            <MenuItem Header="Рецепты">
                <MenuItem Header="Добавить новый" Click="AddMenuItem_Click"/>
                <MenuItem Header="Удалить рецепт" Click="DeleteMenuItem_Click"/>
                <MenuItem Header="Изменить рецепт" Click="EditMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Открыть папку с рецептами" Click="FolderMenuItem_Click"/>
            </MenuItem>

        </Menu>
        <TabControl  Grid.Row="1" Grid.RowSpan="2" SelectionChanged="TabControl_SelectionChanged" Name="TabControlPages">
            <TabItem Header="Обзор запроса (рецепты)">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Обновить" Margin="5" Click="UpdateButton_Click"/>
                    <TextBlock Text="Запрос:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
                    <TextBox Grid.Column="2" Margin="5" Text="Все"/>


                    <ListView
                        Name="Recipes"
                        Margin="5"
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        SelectionMode="Single"
                        FocusVisualStyle="{Binding FontSize.Epsilon.Epsilon.Epsilon, ElementName=Recipes}" Foreground="Black" BorderThickness="3,3,3,3" d:ItemsSource="{d:SampleData ItemCount=5}"
                    >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding Name}"
                                    Header="Название"
                                    Width="150"
                                >
                                    <!--GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Path=Name}" />
                                                <Border Width="5" Background="Black" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate-->
                                </GridViewColumn>
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding Ingredients}"
                                    Header="Ингредиенты"
                                    Width="150"
                                >
                                    <!--GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Path=Ingredients}" />
                                                <Border Width="5" Background="Black"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate-->
                                </GridViewColumn>
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding Actions}"
                                    Header="Приготовление"
                                    Width="150"
                                >
                                    <!--GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Path=Actions}" />
                                                <Border Width="5" Background="Black"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate-->
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Поиск (не работает)">
                <Grid Background="#FFE5E5E5">

                </Grid>
            </TabItem>
            <TabItem Header="Редактировать рецепт">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="236*"/>
                        <ColumnDefinition Width="101*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock HorizontalAlignment="Left" Text="Выберете рецепт:" VerticalAlignment="Center" Margin="288,0,0,0"/>
                    <Button Content="Изменить" Grid.Column="2" Margin="5,5,5,5" Click="EditButton_Click"/>

                    <ListBox Grid.Row="1" Margin="5,5,5,5" Name="EditSlectionListBox" Grid.ColumnSpan="2">
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Добавление рецепта">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>



                    <TextBlock Text="Название:"/>
                    <TextBox x:Name="NameTextBox" Grid.Column="1" Grid.Row="0" Margin="5" />

                    <TextBlock Text="Ингредиенты:" Grid.Row="1"/>
                    <TextBox x:Name="IngredientsTextBox" Grid.Column="1" Grid.Row="1" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>

                    <TextBlock Text="Приготовление:" Grid.Row="2"/>
                    <TextBox x:Name="ActionsTextBox" Grid.Column="1" Grid.Row="2" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>


                    <Button
						Content="Добавить"
						Grid.ColumnSpan="2"
						Grid.Row="3"
						Click="AddButton_Click"
						Margin="5"
					/>
                </Grid>
            </TabItem>
            <TabItem Header="Удалить рецепт">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock HorizontalAlignment="Center" Text="Выберете рецепт:" VerticalAlignment="Center"/>
                    <Button Content="Удалить" Grid.Column="1" Margin="5" Click="DeleteButton_Click"/>

                    <ListBox Grid.Row="1" Margin="5" Name="DeleteSlectionListBox">
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
